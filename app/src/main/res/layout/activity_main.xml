<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apkglobal.sqlite.MainActivity"
    android:background="@drawable/grad">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:textSize="50sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView5" />

    <TextView
        android:id="@+id/name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Name "
        android:paddingLeft="30dp"
        android:layout_marginTop="146dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/mobile"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Mobile "
        android:layout_marginTop="30dp"
        android:paddingLeft="30dp"
        android:layout_below="@+id/name"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/email"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Emial"
        android:paddingLeft="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />
    <EditText
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_alignBaseline="@+id/name"
    android:layout_alignBottom="@+id/name"
    android:layout_toEndOf="@+id/name"
    android:layout_marginStart="16dp"
        android:id="@+id/et_name" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/email"
        android:layout_alignBottom="@+id/email"
        android:layout_alignStart="@+id/et_name"
        android:id="@+id/et_mobile"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/mobile"
        android:layout_alignBottom="@+id/mobile"
        android:layout_alignStart="@+id/et_name"
        android:id="@+id/et_email" />

    <TextView
        android:id="@+id/tvid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_mobile"
        android:layout_marginTop="69dp"
        android:layout_toStartOf="@+id/et_mobile"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvid"
        android:layout_below="@+id/tvid"
        android:layout_marginTop="20dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvmobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvname"
        android:layout_below="@+id/tvname"
        android:layout_marginTop="19dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvmobile"
        android:layout_below="@+id/tvmobile"
        android:layout_marginTop="23dp"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_below="@+id/et_mobile"
        android:layout_toEndOf="@+id/email" />

    <Button
        android:id="@+id/btn_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show"
        android:layout_marginEnd="13dp"
        android:layout_below="@+id/et_mobile"
        android:layout_alignEnd="@+id/textView5" />


</RelativeLayout>
